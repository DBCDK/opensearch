<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
"-//Compass/Compass Core Mapping DTD 2.0//EN"
"http://www.compass-project.org/dtd/compass-core-mapping-2.0.dtd">

<compass-core-mapping>

  <xml-object alias="faktalink">
    <xml-id
        name="id"
        xpath="/faktalink/hovedmenu/title"/>
    <xml-property
        name="titel"
        xpath="/faktalink/hovedmenu/title"
        />
    <xml-property
        name="abstrakt"
        xpath="/faktalink/hovedmenu/abstrakt"
        />
    <xml-property
        name="emneord"
        xpath="/faktalink/hovedmenu/emneord_ukontrolleret/*"
        />
    <xml-property
        name="resume"
        xpath="/faktalink/hovedmenu/resume"
        />
    <xml-property
        name="dk5"
        xpath="/faktalink/hovedmenu/dk5"
        />
    <xml-property
        name="kapitel-titler"
        xpath="/faktalink/kapitel/overskrift"
        />
    <xml-property
        name="kapitel-afsnit"
        xpath="/faktalink/kapitel/afsnit/afsnittitle"
        />
    <xml-property
        name="kapitel-tekst"
        xpath="/faktalink/kapitel/afsnit/broedtekst"
        />
    <xml-property
        name="referencer"
        xpath="/faktalink/kapitel/henvisninger/henvisning/tekst"
        />

  </xml-object>






  <!-- below are test mappings, kept for validation/testing purposes -->

  <xml-object alias="data1">
    <xml-id 
        name="id" 
        xpath="/xml-fragment/data/id/@value" />
    <xml-property 
        xpath="/xml-fragment/data/data1/@value" />
    <xml-property 
        name="eleText" 
        xpath="/xml-fragment/data/data1" />
  </xml-object>

  <xml-object alias="data2" xpath="/xml-fragment/data[1]">
    <xml-id name="id" xpath="id/@value" />
    <xml-property xpath="data1/@value" />
    <xml-property name="eleText" xpath="data1" />
  </xml-object>

</compass-core-mapping>

