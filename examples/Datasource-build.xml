<project name="DataSource" default="build" basedir="."> 

<description>Buildfile for the DBConnection example</description>

<property name="src.dir" value="src/dbc/DBconnection/"/>
<property name="build.dir" value="build"/>
<property name="lib.dir" value="lib"/>
<property name="junit.jar" value="${lib.dir}/junit-4.4.jar"/>
<property name="ojdbc14.jar" value="${lib.dir}/ojdbc14.jar"/>
<property name="log4j.jar " value="${lib.dir}/log4j-1.2.15.jar"/>

<path id="classpath">
<pathelement location="${build.dir}"/>
<pathelement location="${junit.jar}"/>
<pathelement location="${lib.dir}"/>
<pathelement location="${ojdbc14.jar}"/>
</path>

<target name="init">
<available property="build.exists" file="${build.dir}"/>
</target>

<target name="build" description="builds the source in the ${src.dir}">
<mkdir dir="${build.dir}"/>
<javac srcdir="${src.dir}" destdir="${build.dir}">
<classpath refid="classpath"/>
</javac>
</target>

<target name="run" description="runs the dbconnectiontest" depends="build">
  <java classname="dbc.DBconnection.DBconnectionTest" dir="${build.dir}">
    <classpath refid="classpath"/>
  </java>
</target>

